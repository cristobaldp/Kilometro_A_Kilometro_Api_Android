<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TÃTULO -->
        <TextView
            android:id="@+id/tvTituloEstadisticas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š EstadÃ­sticas"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:letterSpacing="0.08"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="4"
            android:shadowRadius="6"
            android:layout_marginBottom="24dp" />

        <!-- FILTROS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Spinner
                android:id="@+id/spAnio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bg_input"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/spMes"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bg_input"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- RESUMEN -->
        <TextView
            android:id="@+id/tvConsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumo medio:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KilÃ³metros recorridos:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvGasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gasto total:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- MENSAJE SIN DATOS -->
        <TextView
            android:id="@+id/tvMensajeSinDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay datos para el perÃ­odo seleccionado"
            android:textStyle="italic"
            android:textColor="#CCFFFFFF"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- GRÃFICA CONSUMO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumo (L/100km)"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartConsumo"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginBottom="24dp" />

        <!-- GRÃFICA GASTO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gasto (â‚¬)"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartGasto"
            android:layout_width="match_parent"
            android:layout_height="280dp" />

    </LinearLayout>
</ScrollView>
